<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/teacher_buttons_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/teacher_buttons_layout"
        app:layout_constraintTop_toBottomOf="@+id/teacher_buttons_layout"
        app:layout_constraintVertical_bias="0.864" />

    <LinearLayout
        android:id="@+id/teacher_buttons_layout"
        android:layout_width="397dp"
        android:layout_height="153dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43">

        <Button
            android:id="@+id/button_faisal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faisal" />

        <Button
            android:id="@+id/button_oskar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oskar" />

        <Button
            android:id="@+id/button_david"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/david" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/question_box"
        android:layout_width="369dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        android:text="Choose a teacher to rate"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Choose a teacher to rate" />


</android.support.constraint.ConstraintLayout>